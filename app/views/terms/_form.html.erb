<style>
  .term-input {width: 233px;}
</style>

<%= simple_form_for(@search, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <%= f.simple_fields_for :terms do |term_form|  %>
      <%= term_form.input :text, :wrapper => :prepend, :label => false, :hint => 'hint' do %>
        <%= content_tag :span, "#", :class => "term-input add-on" %>
        <%= term_form.input_field :text %>
      <% end %>
    <% end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>


